{
  "name": "casuallights",
  "version": "1.0.0",
  "scripts": {
    "build-css": "node-sass --include-path scss ./wwwroot/scss/styles.scss ./wwwroot/dist/bundle.css",
    "build-bootstrap-css": "webpack --progress --profile",

    "build-bootstrap-css-2": "node-sass --include-path scss ./wwwroot/scss/bootstrap/bootstrap.scss ./wwwroot/dist/bootstrapBundle.css",

    "build-js": "browserify ./wwwroot/js/app.js -o ./wwwroot/dist/bundle.js",

    "watch-css": "nodemon -e scss --watch ./wwwroot/scss -x \"npm run build-css build-bootstrap-css\"",
    "watch-js": "nodemon -e js --watch ./wwwroot/js -x \"npm run build-js\"",

    "build": "npm run build-css && npm run build-bootstrap-css && npm run build-js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.0.1",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^4.3.0",
    "cssnano": "^4.1.10",
    "file-loader": "^6.1.0",
    "mini-css-extract-plugin": "^0.11.2",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.6",
    "postcss-loader": "^4.0.2",
    "sass-loader": "^10.0.2",
    "style-loader": "^1.2.1",
    "watchify": "^3.11.1",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "bootstrap": "^4.5.2",
    "browserify": "^17.0.0",
    "jquery": "^3.5.1",
    "watch": "^1.0.2"
  }
}
